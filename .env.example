# Database Configuration
# For local development: use localhost
# For Docker: docker-compose.yml will override this with @db
DATABASE_URL=postgres://postgres:mysecretpassword@localhost:5432/ict?sslmode=disable

# Initial Admin User (created on first run)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin1234

# File Upload Directory
UPLOAD_DIR=/data/uploads

# Cookie Security Keys (generate random strings for production)
# You can generate these with: openssl rand -hex 32
COOKIE_HASH_KEY=
COOKIE_BLOCK_KEY=

# SMTP Email Configuration
# For Gmail: Use App Password from https://myaccount.google.com/apppasswords
#   - Remove spaces from App Password (e.g., "abcd efgh ijkl mnop" â†’ "abcdefghijklmnop")
#   - Or use quotes if keeping spaces: SMTP_PASSWORD="abcd efgh ijkl mnop"
# For Local Testing: Use Mailhog (host: localhost or host.docker.internal, port: 1025)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
SMTP_FROM=noreply@your-domain.com

# Server Configuration
LISTEN_ADDR=:8080
